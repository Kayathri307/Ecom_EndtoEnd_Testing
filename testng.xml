<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel ="tests" name="Suite">
  //Thread_Count one means one testcase will in that test 
  <groups>
  <run>
  <include name="ErrorHandling"/>
  </run>
  </groups>
  
  <groups>
  <run>
  <include name="Purchase"/>
  </run>
  </groups>
  <test thread-count="5" name="SubmitOrdertest">
    <classes>
      <class name="IBM.Selenium.Startingpage"/>
    </classes>
  </test>

  <test thread-count="5" name="Error Validation Test">
    <classes>
      <class name="IBM.Selenium.ErrorValidation"/>
    </classes>
  </test>

</suite>
